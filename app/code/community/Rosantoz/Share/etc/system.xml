<?xml version="1.0"?>
<config>
    <sections>
        <catalog>
            <groups>
                <rosantoz_share>
                    <label>Rosantoz - Share on Facebook</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment>
                        <![CDATA[
                        <p>
                            <strong>Module Version: 1.0.0</strong>
                        </p>
                        <p>
                            Developed by Rodrigo dos Santos
                            (<a href="http://twitter.com/rosantoz" target="_blank">@rosantoz</a>).
                            Please visit my personal blog at
                            <a href="http://rodrigodossantos.ws" target="_blank">
                            http://rodrigodossantos.ws</a>
                        </p>
                        <p>
                            In order to get your Application ID you have to access
                            <a href="https://developers.facebook.com" target="_blank"> https://developers.facebook.com</a>
                             and create a new app. In the new app page fill the "App Domains" field with
                            your magento's domain. "Sandbox Mode" must be disabled.
                            In "Select how your app integrates with Facebook" choose "Website with
                            Facebook Login and inform your domain again in "Site URL". You will get
                            your Application Id once you have finished.
                        </p>
                        ]]>
                    </comment>
                    <fields>

                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>

                        <application_id translate="label">
                            <label>Facebook Application ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </application_id>

                        <button_text translate="label">
                            <label>Button's Text</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </button_text>

                        <button_size translate="label">
                            <label>Button's Size</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Rosantoz_Share_Model_Source_Size</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </button_size>

                    </fields>
                </rosantoz_share>
            </groups>
        </catalog>
    </sections>
</config>